@using MultiLC1.Models
@model IEnumerable<MultiLC1.Models.Usuario>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    @*<div class="col-lg-3"><a href="@Url.Action("Create", "Usuarios")" class="btn btn-success" style="margin-top: 6%">Agregar Usuario</a></div>*@
    <div class="col-lg-3">
        <button id="adduser" class="btn btn-success" style="margin-top: 6%">Agregar Usuario</button>
    </div>
    <div class="col-lg-6">
        <h2 class="text-center">Lista de Usuarios</h2>
    </div>
    <div class="col-lg-3"></div>
</div>
<hr style="color: grey; border-color: grey; margin-top: 0" />

<table id="tabla" class="table">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Apellido
            </th>
            <th class="text-center">
                Email
            </th>
            <th class="text-center">
                DNI
            </th>
            <th class="text-center">
                Estado
            </th>
            <th class="text-center">
                Opciones
            </th>
        </tr>
    </thead>

    <tbody id="insert">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Dni)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.EstadoUsuario)
                </td>
                <td class="text-center">
                    <a href="@Url.Action("Edit", "Usuarios", new { id = item.IdUsuario})" class="btn btn-primary btn-sm" title="Editar"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    <a href="@Url.Action("Details", "Usuarios", new {id = item.IdUsuario})" class="btn btn-primary btn-sm" title="Detalles"><span class="glyphicon glyphicon-list" aria-hidden="true"></span></a>
                    <a href="@Url.Action("Delete","Usuarios", new { id = item.IdUsuario})" class="btn btn-danger btn-sm" title="Eliminar"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                </td>
            </tr>
        }
    </tbody>

</table>

@section scripts{
    <script>
        $(document).ready(function() {
            $('#tabla').DataTable();
        });

        $('#adduser').click(function () {
            $('#adduser').addClass('disabled');
            $('#insert').prepend('<tr id="inserttd"></tr>');

            $('#inserttd').append('<td><input id="username" type="text" /></td>');
            $('#inserttd').append('<td><input id="userlastname" type="text" /></td>');
            $('#inserttd').append('<td class="text-center"><input id="usermail" type="email" /></td>');
            $('#inserttd').append('<td class="text-center"><input id="useridentity" type="text" /></td>');
            $('#inserttd').append('<td class="text-center">No Activo</td>');
            $('#inserttd').append('<td class="text-center"><button class="btn btn-success btn-sm" onclick="adduser()"><span class="glyphicon glyphicon-ok"></span></button>&nbsp;<button id="addcancel" class="btn btn-danger btn-sm" onclick="addcancel()"><span class="glyphicon glyphicon-remove"></span></button></td>');
            
        });
        
        function addcancel() {
            $('#addcancel').closest('tr').remove();
            $('#adduser').removeClass('disabled');
        }

        function adduser() {
            var un = true;
            var uln = true;
            if ($('#username').val() == "") {
                document.getElementById("username").placeholder = "Campo Obligatorio";
                $('#username').css("border-color", "red");
                un = false;
            }

            if ($('#userlastname').val() == "") {
                document.getElementById("userlastname").placeholder = "Campo Obligatorio";
                $('#userlastname').css("border-color", "red");
                uln = false;
            }

            if (un & uln) {
                var user = {
                    Nombre: $('#username').val(),
                    Apellido: $('#userlastname').val(),
                    Email: $('#usermail').val(),
                    Dni: $('#useridentity').val(),
                    EstadoUsuario: 0,
                    UsuarioPadre: null,
                    ListaReferidos: [],
                    Ventas: [],
                    Puntos: [],
                    Mesas: []
                }

                $.ajax({
                    url: '@Url.Action("AddUser", "Usuarios")',
                    type: "POST",
                    data: JSON.stringify(user),
                    dataType: "JSON",
                    contentType: "application/json",
                    success: function(d) {
                        if (d.status) {
                            toastr.success("Usuario guardado");
                        } else {
                            toastr.warning("Error");
                        }
                    }
                });

                document.getElementById("username").readOnly = true;
                $('#username').css("border-color", "transparent");
                document.getElementById("username").removeAttribute("id");
                document.getElementById("userlastname").readOnly = true;
                $('#userlastname').css("border-color", "transparent");
                document.getElementById("userlastname").removeAttribute("id");
                document.getElementById("usermail").readOnly = true;
                $('#usermail').css("border-color", "transparent");
                document.getElementById("usermail").removeAttribute("id");
                document.getElementById("useridentity").readOnly = true;
                $('#useridentity').css("border-color", "transparent");
                document.getElementById("useridentity").removeAttribute("id");
            }
        }
    </script>
}